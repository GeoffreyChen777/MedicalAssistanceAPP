<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="用户名称"
        android:textColor="#ffffff"
        android:textSize="18dip" />

    <EditText
        android:id="@+id/loginname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:hint="请输入用户名称或手机号"
       android:textColor="#ffffff"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="密码"
        android:textColor="#ffffff"
        android:layout_below="@+id/loginname"
        android:textSize="18dip" />

     <EditText
         android:id="@+id/loginPassword"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
          android:text="请输入密码"
        android:textColor="#ffffff"
         android:ems="10"
          android:layout_below="@+id/textView2"
         android:inputType="textPassword" />
      <TextView 
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
     
       android:layout_below="@+id/loginPassword"
       android:text="记住密码"
       android:textColor="#ffffff"
       android:textSize="18dip"
       android:layout_margin="5dp"
       />

      <RadioButton
          android:id="@+id/myRadioBtn01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="是"
          android:textColor="#ffffff"
          android:layout_below="@+id/textView3"
          android:layout_alignRight="@+id/textView3"
          android:textSize="16sp" />

      <RadioGroup
       android:id="@+id/myGroup"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView3"
      android:layout_alignRight="@+id/textView3"
       
       >
        </RadioGroup>

      <RadioButton
          android:id="@+id/myRadioBtn02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="否"
          android:textColor="#ffffff"
          android:layout_alignRight="@+id/textView3"
          android:layout_below="@+id/myRadioBtn01"
          android:textSize="16sp" />

      <Button
          android:id="@+id/loginbutton1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/myRadioBtn02"
          android:layout_marginTop="28dp"
          android:layout_toRightOf="@+id/textView2"
          android:text="登录" />

      <Button
          android:id="@+id/loginbutton2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/loginbutton1"
          android:layout_alignBottom="@+id/loginbutton1"
          android:layout_alignParentRight="true"
          android:layout_marginRight="56dp"
          android:text="取消" />

      <TextView
          android:id="@+id/textview5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/loginbutton1"
          android:layout_marginTop="43dp"
          android:textColor="#ffffff"
          android:layout_toLeftOf="@+id/loginbutton2"
          android:ems="10" />

</RelativeLayout>