<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.sorry.band.widget.PublishToolBar
        android:id="@+id/publishToolBar"
        android:layout_width="match_parent"
        android:layout_height="45dp" >
     </com.sorry.band.widget.PublishToolBar>

    <EditText
        android:id="@+id/titleEditView"
        android:layout_below="@id/publishToolBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="标题"
        android:textSize="15sp"
        android:textStyle="italic"
        android:background="@null"
        />
    <View
        android:id="@+id/line"
        android:layout_below="@id/titleEditView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/contentEditView"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="内容"
        android:textSize="15sp"
        android:gravity="top"
        android:scrollbars="vertical"
        android:textStyle="italic"
        android:background="@null"
        />

 <CheckBox
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="  是否附上体征信息"
     android:textColor="@color/colorGrey"
     android:id="@+id/addInforBox"
     android:layout_below="@+id/contentEditView"
     android:layout_alignStart="@+id/contentEditView" />


</RelativeLayout>
